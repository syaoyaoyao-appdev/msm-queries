<h1>
  Director #<%= @details.id %> details
</h1>

<a href="/directors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_director/<%= @details.id %>" class="btn btn-block btn-outline-secondary">
  Delete director
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @details.name %> 
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @details.dob %> 
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
   <%= @details.bio %> 
  </dd>

  <dt>
    Image
  </dt>
  <dd>
   <%= @details.image %> 
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@details.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@details.updated_at) %> ago
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border ="1">
<% @filmography.each do |a_film| %>
  <tr>
    <td>
      <%= a_film.title%>
    </td>
    <td>
      <img src="http://robohash.org/<%= a_film.image%>">
    </td>
    <td>
      <%= a_film.year%>
    </td>
    <td>
      <%= @details.name %> 
    </td>
    <td>
      <a href="/movies/<%= a_film.id %>">
        Show details
      </a>
    </td>
  </tr>
<%end%>
</table>
